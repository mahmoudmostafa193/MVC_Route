
@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>All Department</h1>

<br />
<br />

<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create Department</a>

<br />
<br />
@if(Model.Count()>0)
{
<table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                   Code
                </th>
                <th>
                   Name
                </th>
                <th>
                    Date of Create
                </th>
                <th>
                    Details
                </th>
                <th>
                    Update
                </th>
                <th>
                    Delete
                </th>
            </tr>  
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                       @item.Code
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CreateAt
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Department" class=" btn btn-info" asp-route-id="@item.Id">Update</a>
                    </td>
                    <td >
                     
                        <a asp-action="Details" asp-controller="Department" class="btn btn-warning" asp-route-id="@item.Id">Details</a> 
                        
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Department" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>No Department Found</h3>
}
</table>